{
  "name": "@tkottke/hateos-url-manager",
  "version": "1.1.0",
  "description": "Browser and Express JS Utility for creating and maintaining a HATEOS API",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/mjs/index.d.ts",
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "rm -fr dist/* && node esbuild.config.js && npm run build:types",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly --outDir dist/mjs",
    "test": "export TS_NODE_PROJECT='./tsconfig.test.json' && ts-mocha"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "path-to-regexp": "^6.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "esbuild": "^0.27.1",
    "esbuild-node-externals": "^1.20.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.0.0",
    "express": "^4.18.2",
    "mocha": "^10.3.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist/*",
      "examples/*",
      "esbuild.config.js"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "unused-imports"
    ],
    "root": true,
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "no-debugger": "error",
      "unused-imports/no-unused-imports": "error"
    }
  }
}
